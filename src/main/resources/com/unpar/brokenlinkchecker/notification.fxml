<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.unpar.brokenlinkchecker.controllers.NotificationController"
            prefWidth="400" prefHeight="180"
            stylesheets="@notification.css">

    <!-- ================== TITLE BAR ================== -->
    <top>
        <HBox fx:id="titleBar" alignment="CENTER_LEFT" styleClass="title-bar">
            <Label fx:id="titleLabel" text="ERROR" styleClass="title-text" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="closeBtn" text="✕" styleClass="title-btn close-btn"/>
        </HBox>
    </top>

    <!-- ================== CONTENT ================== -->
    <center>
        <HBox spacing="16" alignment="CENTER_LEFT" styleClass="content-area" padding="20">
            <Label fx:id="iconLabel" text="⚠" styleClass="icon-label"/>
            <Label fx:id="messageLabel" text="Something went wrong..." wrapText="true" styleClass="message-text" />
        </HBox>
    </center>
</BorderPane>
