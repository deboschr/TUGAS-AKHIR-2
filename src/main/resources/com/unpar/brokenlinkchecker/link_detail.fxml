<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.unpar.brokenlinkchecker.controllers.LinkDetailController"
            prefWidth="720" prefHeight="480"
            stylesheets="@link_detail.css"
            styleClass="detail-root">

    <!-- ===================== TITLE BAR ===================== -->
    <top>
        <HBox fx:id="titleBar" styleClass="title-bar">
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="&#x2715;" fx:id="closeBtn" styleClass="title-btn close-btn"/>
        </HBox>
    </top>

    <!-- ===================== MAIN CONTENT ===================== -->
    <center>
        <VBox spacing="16" styleClass="content-root">
            <!-- === CARD === -->
            <VBox spacing="12" styleClass="card">
                <GridPane hgap="12" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="20"/>
                        <ColumnConstraints percentWidth="80"/>
                    </columnConstraints>

                    <Label text="URL" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="label"/>
                    <TextField fx:id="urlField" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1"
                               styleClass="text-field"/>
                    <TextArea fx:id="urlField" editable="false" wrapText="false" prefRowCount="1"
                              styleClass="text-field single-line"/>


                    <Label text="Final URL" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="label"/>
                    <TextField fx:id="finalUrlField" editable="false" GridPane.rowIndex="1" GridPane.columnIndex="1"
                               styleClass="text-field"/>

                    <Label text="Content Type" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="label"/>
                    <TextField fx:id="contentTypeField" editable="false" GridPane.rowIndex="2" GridPane.columnIndex="1"
                               styleClass="text-field"/>

                    <Label text="Status" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="label"/>
                    <TextField fx:id="statusField" editable="false" GridPane.rowIndex="3" GridPane.columnIndex="1"
                               styleClass="text-field"/>
                </GridPane>
            </VBox>

            <Separator/>

            <!--            <Label text="Source Webpages" styleClass="section-title"/>-->

            <TableView fx:id="sourceTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="anchorColumn" text="Anchor text" prefWidth="200"/>
                    <TableColumn fx:id="sourceColumn" text="Source Webpage" prefWidth="500"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
