<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import java.lang.String?>

<BorderPane
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.unpar.brokenlinkchecker.controllers.LinkController"
    stylesheets="@../styles/link-style.css"
    prefWidth="900" prefHeight="600">


    <!-- ===================== TITLE BAR ===================== -->
    <top>
        <HBox fx:id="titleBar" styleClass="title-bar">
            <!-- Judul di kiri -->
            <Label text="Link Details" styleClass="title-text" />

            <!-- Spacer agar tombol ke kanan -->
            <Region HBox.hgrow="ALWAYS" />

            <!-- Tombol Close -->
            <Button text="&#x2715;" fx:id="closeBtn">
                <styleClass>
                    <String fx:value="title-btn" />
                    <String fx:value="close-btn" />
                </styleClass>
            </Button>
        </HBox>
    </top>

    <!-- ===================== MAIN CONTENT ===================== -->
    <center>
        <VBox spacing="16" styleClass="content-root">
            <!-- === CARD === -->
            <VBox spacing="12" styleClass="card">
                <GridPane hgap="12" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="20" />
                        <ColumnConstraints percentWidth="80" />
                    </columnConstraints>

                    <Label text="URL" GridPane.rowIndex="0" GridPane.columnIndex="0"
                        styleClass="text-label" />
                    <TextField fx:id="urlField" editable="false" GridPane.rowIndex="0"
                        GridPane.columnIndex="1"
                        styleClass="text-field" />

                    <Label text="Final URL" GridPane.rowIndex="1" GridPane.columnIndex="0"
                        styleClass="text-label" />
                    <TextField fx:id="finalUrlField" editable="false" GridPane.rowIndex="1"
                        GridPane.columnIndex="1"
                        styleClass="text-field" />

                    <Label text="Content Type" GridPane.rowIndex="2" GridPane.columnIndex="0"
                        styleClass="text-label" />
                    <TextField fx:id="contentTypeField" editable="false" GridPane.rowIndex="2"
                        GridPane.columnIndex="1"
                        styleClass="text-field" />

                    <Label text="Error" GridPane.rowIndex="3" GridPane.columnIndex="0"
                        styleClass="text-label" />
                    <TextField fx:id="errorField" editable="false" GridPane.rowIndex="3"
                        GridPane.columnIndex="1"
                        styleClass="text-field" />
                </GridPane>
            </VBox>

            <TableView fx:id="webpageLinkTable" styleClass="table-view" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="anchorTextColumn" text="Anchor text" prefWidth="200" />
                    <TableColumn fx:id="webpageUrlColumn" text="Webpage URL" prefWidth="500" />
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>